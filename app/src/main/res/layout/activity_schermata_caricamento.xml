<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.SchermataCaricamentoActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:fontFamily="@font/bevan"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:src="@drawable/logo"
        android:textColor="@color/black"
        android:background="@drawable/logo_background"
        android:textSize="19sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:gravity="center"
        android:text="@string/caricamento"
        android:textColor="@color/dark_cornflower_blue"
        android:textSize="40sp"
        android:shadowColor="@color/black"
        android:shadowDx="15"
        android:shadowDy="10"
        android:shadowRadius="1.5"/>

    <TextView
        android:id="@+id/percentuale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/barra_caricamento"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:text="@string/percentuale"
        android:textColor="@color/lincoln_green"
        android:textSize="40sp" />

    <ProgressBar
        android:id="@+id/barra_caricamento"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="300dp"
        android:progressDrawable="@drawable/barra_caricamento" />

    <TextView
        android:id="@+id/info_caricamento1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1.5"
        android:text="@string/info_caricamento1"
        android:textColor="@color/dark_cornflower_blue"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/info_caricamento2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bowlby_one_sc"
        android:gravity="center"
        android:text="@string/info_caricamento2"
        android:textColor="@color/dark_cornflower_blue"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:visibility="gone"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1.5"/>

    <TextView
        android:id="@+id/info_caricamento3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bowlby_one_sc"
        android:gravity="center"
        android:text="@string/info_caricamento3"
        android:textColor="@color/dark_cornflower_blue"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:visibility="gone"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1.5"/>

</RelativeLayout>