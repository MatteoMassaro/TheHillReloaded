<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/emerald"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bevan"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:text="@string/theHillReloaded"
        android:textColor="@color/black"
        android:background="@drawable/logo_background"
        android:textSize="19sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/bowlby_one_sc"
        android:gravity="center"
        android:text="@string/multigiocatore"
        android:textColor="@color/dark_cornflower_blue"
        android:textSize="40sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20sp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="102dp"
        android:clickable="true"
        android:focusable="true">

        <android.support.v7.widget.CardView
            android:id="@+id/uno_contro_uno"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/choice_button_background">

                <ImageView
                    android:contentDescription="@string/uno_contro_uno"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/vs"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:gravity="center"
                    android:text="@string/uno_contro_uno"
                    android:textColor="@color/white"
                    android:textSize="28sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="102dp"
        android:clickable="true"
        android:focusable="true">

        <android.support.v7.widget.CardView
            android:id="@+id/cooperativo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/choice_button_background">

                <ImageView
                    android:contentDescription="@string/cooperativo"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cooperation"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:text="@string/cooperativo"
                    android:textColor="@color/white"
                    android:textSize="28sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/logout"
            android:contentDescription="@string/exit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/emerald"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:onClick="onClick"/>

        <ImageButton
            android:id="@+id/opzioni"
            android:contentDescription="@string/option_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/emerald"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_settings_24"
            android:onClick="onClick"/>
    </LinearLayout>

</LinearLayout>